--1)
SELECT * FROM employees 
WHERE DEPartment_id = 50 and  hire_date LIKE '%97';  



--2)
SELECT LAST_NAME,JOB_ID,SALARY,COMMISSION_PCT FROM EMPLOYEES WHERE COMMISSION_PCT > 0 
ORDER BY SALARY DESC;

--3)
SELECT q'[The SALARY if ]' ||FIRST_NAME ||q'[ after 10% raise raise is ]' ||round(salary*.10,0) "SALARY" 
FROM employees where commission_pct is null;

--4)
SELECT LAST_NAME,TRUNC(months_between(sysdate,hire_date)/12) year,
TRUNC(((months_between(sysdate,hire_date)/12)-TRUNC(months_between(sysdate,hire_date)/12))*10) months 
FROM employees order by year desc;




--5)
select * FROM employees
WHERE last_name like 'J%' or last_name like 'K%' or last_name like 'L%' or last_name like 'M%';

--6)
SELECT LAST_NAME , EMPLOYEE_ID,
DECODE(COMMISSION_PCT,0,'NO','YES') AS "RECEIVE COMMISSION" FROM EMPLOYEES;

--7)
SELECT D.DEPARTMENT_NAME,CITY,E.FIRST_NAME,E.LAST_NAME,E.JOB_TITLE,E.SALARY
FROM EMPLOYEES E
JOIN DEPARTMENTS D ON E.DEPARTMENT_ID = D.DEPARTMENT_ID
JOIN LOCATION L ON D.LOCATION_ID=L.LOCATION_ID
WHERE L.CITY =;

--8)
SELECT COUNT(EMPLOYEE_ID) AS "Last Name count" FROM EMPLOYEES WHERE LAST_NAME LIKE '%N';

--9)
SELECT D.DEPARTMENT_ID,D.DEPARTMENT_NAME,L.LOCATION_ID AND COUNT(EMPLOYEE_ID) 
FROM EMPLOYEES E JOIN DEPARTMENTS D ON E.DEPARTMENT_ID= D.DEPARTMENT_ID
JOIN LOCATION L ON D.LOCATION_ID =1.LOACTION_ID
GROUP BY D.DEPARTMENT_NAME,L.CITY ORDER BY D.DEPARTMENT_NAME;

--10)
SELECT JOB_ID FROM EMPLOYEES WHERE DEPARTMENT_ID BETWEEN 10 AND 20;


--12)
SELECT last_name,hire_date 
FROM employees where to_number(to_char(hire_date,'DD'))<16;

--13)
SELECT LAST_NAME,salary,round(salary/1000)thousands from employees;


--14)
SELECT LAST_NAME,MANAGER_NAME


--15)
SELECT DEPARTMENT_ID ,DEPARTMENT_NAME,COUNT(EMPLOYEE_ID),AVG(SALARY)
FROM DEPARTMENT D 
JOIN EMPLOYEES E ON D.DEPARTMENT_ID = E.DEPARTMENT_ID
GROUP BY D.DEPARTMENT_ID,D.DEPARTMENT_NAME
ORDER BY D.DEPARTMENT_ID;
